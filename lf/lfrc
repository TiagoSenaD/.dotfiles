# Basic Settings
set ignorecase true
set icons true
set drawbox true
set preview true


# Basic Functions
map . set hidden!
map N set number!
map p paste
map x cut
map y copy
map <enter> open
map C clear
map R reload

# Costom cmd
cmd mkdir %mkdir "$@"

cmd open ${{
  test -L $f && f=$(readlink -f $f)
  case $(file --mime-type $f -b) in
    text/*) $EDITOR $fx;;
    application/pdf) $(devour $PDF $fx);;
    image/*) $(devour $IMAGE $fx);;
    video/*) $(devour $VIDEO $fx);;
    *) echo "Unsupported format" ;;
  esac
}}

cmd unarchive ${{
  case "$f" in
      *.zip) unzip "$f" ;;
      *.tar.gz) tar -xzvf "$f" ;;
      *.tar.bz2) tar -xjvf "$f" ;;
      *.tar) tar -xvf "$f" ;;
      *) echo "Unsupported format" ;;
  esac
}}

cmd bg %feh --bg-scale "$f"

cmd tb %(devour feh -t "$@")


# Mapping cmds
map mk   push :mkdir<space>
map bg  :bg
map tb  :tb

# Movement (g)
map gc cd ~/.config

# Remove some defaults
map o
map n
map "'"
map '"'
map d
map m
map t
